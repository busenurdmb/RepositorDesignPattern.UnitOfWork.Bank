@model SelectList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*  
    SENDERID
    ACCOUNTID
    AMOUNT
*@
<div class="mt-3">
    <form action="SendMoney" method="post" class="w-75 mx-auto">
        <input type="hidden" name="SenderId" value="@ViewBag.Sender" />
        <div class="mb-3">
            <label>Göndereceğiniz Hesap Numarası:</label>
            <select class="form-select mt-3" asp-items="@Model" name="AccountId">
            </select>
        </div>
        <div class="mb-3">
            <label> Göndericeğimiz Tutar:</label>
            <input type="number" name="Amount" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Para Gönder</button>
        </div>

    </form>



</div>
